<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".classes.modules.login.view.fragments.RegisterFragment"
    android:gravity="center"
    android:textAlignment="center"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvExplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Rellene los campos"
        />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginEnd="63dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:text="@string/layout_name"
        />

    <EditText
        android:id="@+id/etNewName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:paddingStart="8dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginEnd="67dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:text="@string/layout_email"
        />

    <EditText
        android:id="@+id/etNewEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:paddingStart="8dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginEnd="47dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:text="@string/layout_pswd"
        />

    <EditText
        android:id="@+id/etPswdNew"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:paddingStart="8dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:inputType="textPassword"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/btAccessNew"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:text="@string/layout_create_bt"
        android:layout_marginTop="30dp"
        />


</LinearLayout>